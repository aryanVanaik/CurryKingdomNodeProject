    <h1>Edit</h1>
    

    <form action="/menu/<%= dish._id %>?_method=PUT" method="POST">
        <div class="div">
            <label for="Dish name">Dish Name: </label>
            <input type="text" name="name" id="dish Name" placeholder="dish name" value="<%= dish.name %>" required="true">
            <!-- takes the data that is save as uses that as a place holder to be edited -->
            
        </div>
        <div class="div">
            <label for="price">Price: </label>
            
            <input type="number" name="price" id="price" step="0.01"Â min="0"  placeholder="price" value="<%= dish.price %>" required="true">
        </div>
            
        
        <div class="div">
            <label for="img">Image URL: </label>
            <input type="text" name="img" placeholder="img url" id="img" value="<%= dish.img %>" required="true">
            
            
        </div>
        <div class="div">
            <label for="des" >Description</label>
            
            <textarea name="description" id="des" cols="30" rows="10" required="true"><%= dish.description %></textarea>
        </div>
        <div class="div">
            <label for="category">Category</label>
            <select name="category" id="category">
                <% for(let category of categories){ %>
                    <option value="<%= category %>" <%= dish.category  === category ? 'selected': '' %>><%= category %> </option> 
                    <!-- this checks what catgeory is applied on the item by looping over it and when found it applies the selected field -->
                     <!-- the category applied is the own shown -->
                <% } %>
            </select>
        </div>
        <button  class="btn btn-outline-warning" data-mdb-ripple-color="dark">
            Confirm Edit
        </button>

    
